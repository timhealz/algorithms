{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "java: runtests:algorithms",
			"type": "shell",
			"command": "/opt/gradle/gradle-7.3.2/bin/gradle test -i",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
			  "reveal": "always",
			  "panel": "new"
			}
		},
		{
			"type": "java",
			"mainClass": "com.timhealz.cs.algorithms",
			"targetPath": "${workspaceFolder}/lib/build/jars/${workspaceFolderBasename}.jar",
			"elements": [
				"${compileOutput}",
				"${dependencies}"
			],
			"problemMatcher": [],
			"label": "java: exportjar:algorithms",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn":["java: runtests:algorithms"]
		}
	]
}